extends ../../layouts/auth.pug
//- include ../../mixins/alert.pug 

block main
    .container.my-5
        .row.justify-content-center
            .col-md-6.col-lg-5
                h1.text-center Đăng Nhập
                form(
                    action=`/${prefixAdmin}/auth/login`,
                    method="POST"
                    enctype="multipart/form-data"
                )
                    .form-group
                        label(for="email") Email
                        input#email.form-group(
                            type="text",
                            name="email",
                            required=true,
                            placeholder="Nhập email..."
                        )

                    .form-group
                        label(for="password") Mật Khẩu
                        input#password.form-group(
                            type="password",
                            name="password",
                            required=true,
                            placeholder="Nhập mật khẩu..."
                        )

                    .form-group
                        button.btn.btn-primary.btn-block(type="submit") Đăng Nhập
